{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "运行滴滴热力图监控系统",
            "type": "shell",
            "command": "python",
            "args": ["main.py", "--mode", "monitor", "--interval", "5"],
            "group": "build",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "启动Web仪表板",
            "type": "shell",
            "command": "python",
